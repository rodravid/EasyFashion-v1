<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.experience.totvs.easyfashion_v1.domain.user.Activities.SearchUserActivity">

    <EditText
          android:layout_width="368dp"
          android:layout_height="wrap_content"
          android:id="@+id/search_user_keywords" tools:layout_editor_absoluteY="0dp"
          tools:layout_editor_absoluteX="8dp"/>

    <Button
          android:id="@+id/search_user_scan"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Scan QR Code"
          android:elevation="5dp"
          android:layout_marginBottom="16dp"
          android:stateListAnimator="@null" android:layout_alignParentBottom="true"/>

</LinearLayout>
