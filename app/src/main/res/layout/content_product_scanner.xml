<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_product_scanner"
        tools:context="com.experience.totvs.easyfashion_v1.ProductScannerActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="27dp"
            tools:layout_editor_absoluteX="139dp" android:id="@+id/scanner_product_name"/>
    <TextView
            android:text="Produto:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="28dp"
            tools:layout_editor_absoluteX="73dp" android:id="@+id/scanner_product_name_label"/>
    <Button
            android:text="Scan product"
            android:layout_width="585dp"
            android:layout_height="70dp" tools:layout_editor_absoluteY="761dp"
            tools:layout_editor_absoluteX="8dp" android:id="@+id/scanner_scan"
            android:onClick="onClick" />
</android.support.constraint.ConstraintLayout>
